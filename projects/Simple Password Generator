import random

chars = 'abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890!@#$%^&*()_-=+' #This characters will be used in password

def generate():
    password = ''
    lenPassword = random.randint(8,20) #Randomly choose a length for password
    while len(password) < lenPassword:
        randomChar = chars[ random.randint( 0, (len(chars)-1) ) ] #Pick a Random character from char list
        password = password + randomChar #Add Random char to end of the password  
    return password
   
while 1:
    print('\nPress Enter to generate a random password')
    input()
    print(generate())
